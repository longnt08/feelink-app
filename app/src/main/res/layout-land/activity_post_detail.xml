<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background">

    <!-- Top Action Bar with Settings Icon -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:src="@drawable/ic_setting" />
    </RelativeLayout>

    <!-- Horizontal lines for visual separation -->
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topBar"
        android:background="#E0E0E0" />

    <!-- Left Side: Profile Section -->
    <LinearLayout
        android:id="@+id/leftSection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/divider1"
        android:layout_above="@+id/bottomNavBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            android:background="#D3D3D3"
            app:civ_border_width="0dp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="-100dp"
            android:src="@drawable/ic_person" />

        <EditText
            android:id="@+id/usernameField"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Your Username"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/replyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:paddingHorizontal="32dp"
            android:text="Reply"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Vertical Divider -->
    <View
        android:id="@+id/verticalDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/divider1"
        android:layout_above="@+id/bottomNavBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/leftSection"
        android:background="#E0E0E0" />

    <!-- Right Side: Post and Comment Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider1"
        android:layout_above="@+id/bottomNavBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/verticalDivider"
        android:orientation="vertical">

        <!-- Post Section -->
        <TextView
            android:id="@+id/postLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Post"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <!-- Comment Field -->
        <EditText
            android:id="@+id/commentField"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#B0BEC5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/ic_person" />
    </LinearLayout>
</RelativeLayout>