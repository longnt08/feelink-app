<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/lined_background"
    android:padding="16dp">

    <!-- Text "Welcome to Diary" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Diary"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- Khoảng cách giữa hai dòng chữ -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- Text "Let's make your first post" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's make your first post"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- Khoảng cách trước nút Play -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Nút Play (hình tam giác) -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_media_play"
        android:contentDescription="Play Button"
        app:tint="#B0B0B0" />

</LinearLayout>