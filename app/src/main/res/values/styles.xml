    </style>

    <!-- Theme cho Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Đặt nền cho splash -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item> <!-- Không có tiêu đề -->
        <item name="android:windowFullscreen">true</item> <!-- Fullscreen nếu cần -->
        <item name="android:windowTranslucentStatus">true</item> <!-- Trạng thái trong suốt -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Status bar trong suốt -->
    </style>
</resources>

